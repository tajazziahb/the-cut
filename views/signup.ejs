<%- include("partials/header") %>

    <div class="max-w-md mx-auto mt-24">
        <h2 class="text-2xl font-bold mb-6">Create Account</h2>

        <form action="/signup" method="POST" class="flex flex-col gap-4">
            <input name="name" placeholder="Name" class="border p-2 rounded" />
            <input name="email" placeholder="Email" type="email" class="border p-2 rounded" />
            <input name="password" placeholder="Password" type="password" class="border p-2 rounded" />

            <button class="bg-blue-600 text-white p-3 rounded">Sign Up</button>
        </form>

        <p class="mt-4">Already have an account? <a href="/login" class="text-blue-600">Login</a></p>
    </div>
    <%- include("partials/footer") %>