<body class="no-scroll">
    <%- include("partials/homeHeader", { title: "Sign Up" }) %>
    <main class="auth-page">
        <section class="auth-card">
            
            <div class="auth-logo">
                <img src="/images/logo-notext.png" alt="The Cut logo">
            </div>

            <h1 class="auth-title">Create Account</h1>
            <p class="auth-subtitle">
                Set up your profile and start tracking your breathing room.
            </p>

            <form action="/signup" method="POST" class="auth-form">
                
                <div>
                    <label class="auth-label" for="name">Name</label>
                    <input id="name" name="name" type="text"
                           placeholder="Jazzi B" required class="auth-input" />
                </div>

                <div>
                    <label class="auth-label" for="email">Email</label>
                    <input id="email" name="email" type="email"
                           placeholder="you@example.com" required class="auth-input" />
                </div>

                <div>
                    <label class="auth-label" for="password">Password</label>
                    <input id="password" name="password" type="password"
                           placeholder="Create a password" required class="auth-input" />
                </div>

                <button type="submit" class="auth-button">Sign Up</button>
            </form>

            <p class="auth-footer">
                Already have an account?
                <a href="/login">Log in</a>
            </p>

        </section>
    </main>

    <%- include("partials/footer") %>
</body>
