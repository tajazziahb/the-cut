<%- include("partials/homeHeader", { title: "Log In" }) %>
<body class="no-scroll">
    

    <main class="auth-page">
        <section class="auth-card">
            
            <div class="auth-logo">
                <img src="/images/logo-notext.png" alt="The Cut logo">
            </div>

            <h1 class="auth-title">Log In</h1>
            <p class="auth-subtitle">
                Welcome back. Check in on your breathing room.
            </p>

            <form action="/login" method="POST" class="auth-form">
                
                <div>
                    <label class="auth-label" for="email">Email</label>
                    <input id="email" name="email" type="email"
                           placeholder="you@example.com" required class="auth-input" />
                </div>

                <div>
                    <label class="auth-label" for="password">Password</label>
                    <input id="password" name="password" type="password"
                           placeholder="••••••••" required class="auth-input" />
                </div>

                <button type="submit" class="auth-button">Login</button>
            </form>

            <p class="auth-footer">
                New here?
                <a href="/signup">Create an account</a>
            </p>

        </section>
    </main>

    <%- include("partials/footer") %>
</body>
